package br.com.fiap.servlet;

import java.io.IOException;
import java.sql.SQLException;

import br.com.fiap.beans.Usuario;
import br.com.fiap.conexao.ConexaoFactory;
import br.fiap.com.dao.UsuarioDAO;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;

public class LoginServlet extends HttpServlet {
    private UsuarioDAO usuarioDAO;

    @Override
    public void init() {
        // Inicializa o DAO com a conexão
        try {
			this.usuarioDAO = new UsuarioDAO(new ConexaoFactory().conexao());
		} catch (ClassNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
    }

    private static final long serialVersionUID = 1L;

    @Override
    protected void doPost(HttpServletRequest request, HttpServletResponse response) throws IOException {
        response.setContentType("application/json");

        try {
            // Captura os dados enviados pelo frontend
            String email = request.getParameter("email");
            String senha = request.getParameter("senha");

            // Valida o usuário no banco de dados
            Usuario usuario = usuarioDAO.autenticar(email, senha);

            if (usuario != null) {
                // Retorna os dados do usuário (ex.: tipo de usuário)
                response.getWriter().write(
                    "{" +
                    "\"email\":\"" + usuario.getEmail() + "\"," +
                    "\"tipoUsuario\":\"" + usuario.getTipoUsuario() + "\"," +
                    "\"idReferencia\":\"" + usuario.getIdReferencia() + "\"" +
                    "}"
                );
            } else {
                // Credenciais inválidas
                response.setStatus(HttpServletResponse.SC_UNAUTHORIZED);
                response.getWriter().write("{\"error\":\"Credenciais inválidas\"}");
            }
        } catch (Exception e) {
            response.setStatus(HttpServletResponse.SC_INTERNAL_SERVER_ERROR);
            response.getWriter().write("{\"error\":\"Erro no servidor\"}");
        }
    }

    @Override
    public void destroy() {
        try {
            if (usuarioDAO != null) {
                usuarioDAO.closeConnection();
            }
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
